{
    "name": "Power Mode Fly",
    "description": "This extension demonstrates a beautiful effect when typing something in a input box or textarea.",
    "version": "0.0.1",
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["powermode.js", "script.js"]
        }
    ],
    "browser_action": {
        "default_title": "POWER",
        "default_icon": "icon.png"
    },
    "manifest_version": 2
}
